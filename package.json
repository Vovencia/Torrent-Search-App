{
  "name": "com.torrentsearch",
  "displayName": "Torrent Search",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "android:add": "cordova platform add android",
    "android:build": "npm run android:add && ts-node ./scripts/build.ts",
    "android:install": "adb install platforms/android/app/build/outputs/apk/debug/app-debug.apk"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "20.5.1",
    "cordova": "12.0.0",
    "cordova-android": "11.0.0",
    "cordova-plugin-advanced-http": "3.3.1",
    "cordova-plugin-file": "7.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-advanced-http": {
        "ANDROIDBLACKLISTSECURESOCKETPROTOCOLS": "SSLv3,TLSv1"
      },
      "cordova-plugin-file": {
        "ANDROIDX_WEBKIT_VERSION": "1.4.0"
      }
    }
  }
}